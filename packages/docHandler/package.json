{
  "name": "@a-la-fois/doc-handler",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "npm run clear && tsc --build",
    "build:lib": "tsc --project ./tsconfig.build.lib.json",
    "start": "yarn build && node dist/main.js",
    "clear": "rimraf dist",
    "start:dev": "npm run build && nodemon --ext \".ts,.js\" --watch \"./src\" --exec \"ts-node ./src/index.ts\"",
    "start:dapr": "dapr run --app-id docHandler --app-protocol http --app-port 50001 --dapr-http-port 3500 --config ./dapr-config.yaml yarn start"
  },
  "dependencies": {
    "@a-la-fois/nest-common": "*",
    "@dapr/dapr": "2.3.1",
    "js-base64": "3.7.2",
    "yjs": "13.5.41"
  }
}
