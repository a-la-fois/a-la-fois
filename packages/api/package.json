{
  "name": "@a-la-fois/api",
  "version": "0.0.27",
  "license": "MIT",
  "files": [
    "lib"
  ],
  "main": "./lib/cjs/library/index.js",
  "module": "./lib/esm/library/index.js",
  "types": "./lib/esm/library/index.d.ts",
  "exports": {
    "require": "./lib/cjs/library/index.js",
    "import": "./lib/esm/library/index.js",
    "types": "./lib/esm/library/index.d.ts"
  },
  "scripts": {
    "prebuild:server": "rimraf dist",
    "pub": "yarn publish",
    "build": "yarn build:lib && yarn build:server",
    "build:server": "nest build",
    "build:lib": "tsc --project ./tsconfig.build.lib.cjs.json && tsc --project ./tsconfig.build.lib.esm.json",
    "build:lib:dev": "tsc --project ./tsconfig.build.lib.cjs.json --watch  --preserveWatchOutput & tsc --project ./tsconfig.build.lib.esm.json --watch  --preserveWatchOutput",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "prepare": "npm run build:lib",
    "publish:image": "./scripts/dockerPublish.sh",
    "start:dev": "nest start --watch --preserveWatchOutput",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:dapr": "dapr run --app-id api --app-port 3003 --dapr-http-port 3503 --placement-host-address localhost:50006 --components-path ../../daprComponents/dev yarn start",
    "start:dapr:dev": "dapr run --app-id api --app-port 3003 --dapr-http-port 3503 --placement-host-address localhost:50006 --components-path ../../daprComponents/dev yarn start:dev",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prepublish": "clean-package --clean",
    "postpublish": "clean-package --restore",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@a-la-fois/models": "0.0.27",
    "@a-la-fois/nest-common": "0.0.27",
    "@a-la-fois/pubsub": "0.0.27",
    "@dapr/dapr": "3.0.0",
    "@nestjs/common": "9.4.2",
    "@nestjs/core": "9.4.2",
    "@nestjs/platform-express": "9.4.2",
    "@typegoose/typegoose": "11.2.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "jsonwebtoken": "9.0.0",
    "mongoose": "7.2.2",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.1",
    "uuid": "9.0.0",
    "yjs": "13.6.1"
  },
  "devDependencies": {
    "@a-la-fois/clean-package": "0.0.27",
    "@nestjs/cli": "9.5.0",
    "@nestjs/schematics": "9.2.0",
    "@nestjs/testing": "9.4.2",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.2",
    "@types/node": "20.2.5",
    "@types/supertest": "2.0.12",
    "@types/uuid": "9.0.1",
    "jest": "29.5.0",
    "rimraf": "5.0.1",
    "source-map-support": "0.5.21",
    "supertest": "6.3.3",
    "ts-jest": "29.1.0",
    "ts-loader": "9.4.3",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.1.3"
  }
}
