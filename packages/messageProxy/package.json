{
  "name": "@a-la-fois/message-proxy",
  "version": "0.0.1",
  "description": "",
  "license": "MIT",
  "author": "",
  "private": true,
  "main": "./lib/cjs/library/index.js",
  "module": "./lib/esm/library/index.js",
  "types": "./lib/esm/library/index.d.ts",
  "exports": {
    "require": "./lib/cjs/library/index.js",
    "import": "./lib/esm/library/index.js",
    "types": "./lib/esm/library/index.d.ts"
  },
  "scripts": {
    "prebuild": "rimraf dist lib",
    "build": "yarn build:server && yarn build:lib",
    "build:server": "nest build",
    "build:lib": "tsc --project ./tsconfig.build.lib.cjs.json && tsc --project ./tsconfig.build.lib.esm.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:dapr": "dapr run --app-id messageProxy --app-port 3000 --dapr-http-port 3500 --placement-host-address localhost:50006 --components-path ../../daprComponents yarn start",
    "start:dapr:dev": "dapr run --app-id messageProxy --app-port 3000 --dapr-http-port 3500 --placement-host-address localhost:50006 --components-path ../../daprComponents yarn start:dev",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@a-la-fois/doc-handler": "*",
    "@a-la-fois/nest-common": "*",
    "@nestjs/common": "8.4.4",
    "@nestjs/core": "8.4.4",
    "@nestjs/platform-express": "8.4.4",
    "@nestjs/platform-ws": "8.4.7",
    "@nestjs/websockets": "8.4.7",
    "kafkajs": "2.1.0",
    "node-rdkafka": "2.13.0",
    "reflect-metadata": "0.1.13",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "8.2.8",
    "@nestjs/schematics": "8.0.8",
    "@nestjs/testing": "8.4.4",
    "@types/express": "4.17.13",
    "@types/jest": "27.4.1",
    "@types/node": "16.11.26",
    "@types/supertest": "2.0.12",
    "jest": "27.5.1",
    "source-map-support": "0.5.21",
    "supertest": "6.2.2",
    "ts-jest": "27.1.4",
    "ts-loader": "9.2.8",
    "ts-node": "10.7.0",
    "tsconfig-paths": "3.14.0",
    "typescript": "4.6.3"
  }
}
